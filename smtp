<?php

use PHPMailer\PHPMailer\Exception;
use PHPMailer\PHPMailer\SMTP;
use PHPMailer\PHPMailer\PHPMailer;

if ($_SERVER["REQUEST_METHOD"] === "POST") {
    $senderName = $_POST['first_name'] . ' ' . $_POST['last_name'];
    $senderPhone = $_POST['number'];
    $senderEmail = $_POST['email'];
    $message = $_POST['service'];

    $adminEmail = "kemi@gn122.com";

    require __DIR__ . '/PHPMailer/src/PHPMailer.php';
    require __DIR__ . '/PHPMailer/src/SMTP.php';
    require __DIR__ . '/PHPMailer/src/Exception.php';

    $mail = new PHPMailer(true);

    try {
        $mail->isSMTP();
        $mail->Host = 'smtp.gmail.com';
        $mail->SMTPAuth = true;
        $mail->Username = 'gn25122128@gmail.com';
        $mail->Password = 'dipq dqqs khhp urri'; // App password
        $mail->SMTPSecure = PHPMailer::ENCRYPTION_STARTTLS;
        $mail->Port = 587;

        $mail->setFrom($senderEmail, $senderName);
        $mail->addAddress($adminEmail, 'Admin');
        $mail->isHTML(true);
        $mail->Subject = "New Consultation Form Submission from $senderName";
        $mail->Body = "
            <h1>New Consultation Form Submission</h1>
            <p><strong>Name:</strong> $senderName</p>
            <p><strong>Email:</strong> $senderEmail</p>
            <p><strong>Phone:</strong> $senderPhone</p>
            <p><strong>Message:</strong></p>
            <p>$message</p>
        ";
        $mail->AltBody = "Name: $senderName\nEmail: $senderEmail\nPhone: $senderPhone\nMessage:\n$message";

        if ($mail->send()) {
            echo json_encode(['success' => true, 'message' => 'Email sent successfully!']);
        } else {
            echo json_encode(['success' => false, 'message' => 'Failed to send email.']);
        }
    } catch (Exception $e) {
        echo json_encode(['success' => false, 'message' => 'Mailer Error: ' . $e->getMessage()]);
    }
}
?>
